{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    "declaration": true,
    "declarationMap": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "@miku": ["./miku/Miku"],
      "@miku/enum/*": ["./miku/enum/*"],
      "@miku/types/*": ["./miku/types/*"],
      "@miku/errors/*": ["./miku/errors/*"],
      "@miku/constants": ["./miku/utils/constants"],
      "@miku/constants/*": ["./miku/utils/*"],
      "@miku/package": ["./package.json"],
      "@miku/webhook": ["./miku/Webhook"],
      "@miku/builder/*": ["./miku/builder/*"]
    }
  }
}
